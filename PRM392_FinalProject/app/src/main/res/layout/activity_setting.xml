        android:layout_marginEnd="336dp"
        android:fontFamily="casual"
        android:text="Liên kết"
        android:textColor="#F3EFEF"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
