        android:buttonTint="#FAF3F3"
        android:foregroundTint="#F4EFEF"
        android:shadowColor="#F6E7E7"
        android:textColor="#F6F0F0"
        android:textColorHighlight="#F4EAEA"
        android:textColorHint="#F6F1F1"
        android:textColorLink="#F1EDED"
